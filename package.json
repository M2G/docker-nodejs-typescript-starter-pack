{
  "name": "docker-nodejs-typescript",
  "version": "0.0.1",
  "description": "Docker, NodeJS and Typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/M2G/docker-nodejs-typescript-starter-pack"
  },
  "homepage": "https://github.com/M2G/docker-nodejs-typescript-starter-pack",
  "bugs": {
    "url": "https://github.com/M2G/docker-nodejs-typescript-starter-pack/issues"
  },
  "keywords": [
    "docker",
    "nodejs",
    "typescript"
  ],
  "author": "M2G",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node --harmony-top-level-await build/index.js",
    "watch-node": "nodemon build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect build/index.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "assert": "^1.4.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.4.0",
    "jest-cli": "^26.4.0",
    "jest-resolve": "26.4.0",
    "jest-watch-typeahead": "0.6.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^26.4.0",
    "nodemon": "^1.13.0",
    "ts-node": "^5.0.0"
  }
}
